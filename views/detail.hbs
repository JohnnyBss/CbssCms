<link rel="stylesheet" href="/stylesheets/detail.css" />
<link rel="stylesheet" href="/stylesheets/image-hover/normalize.css" />
<link rel="stylesheet" href="/stylesheets/image-hover/hover-effects.css" />
<link rel="stylesheet" href="/stylesheets/selectric/selectric.css" />
<link rel="stylesheet" href="/stylesheets/fileUpload/iconfont.css" />
<link rel="stylesheet" href="/stylesheets/fileUpload/fileUpload.css">

<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">服务档案信息管理</a>
    </li>
    <li class="active">考评内容管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      <!--考评内容管理-->
      <!--<small>-->
        <!--<i class="icon-double-angle-right"></i>-->
        <!--模块名称-->
      <!--</small>-->
      <!--<small>-->
        <!--<i class="icon-angle-right"></i>-->
        <!--项目名称-->
      <!--</small>-->
      <!--<small>-->
        <!--<i class="icon-angle-right"></i>-->
        <!--考评点-->
      <!--</small>-->
    </h1>
  </div>
  <div class="row" id="app">
    <div class="col-xs-12">
      <div class="option-bar">
        <button type="button" class="btn btn-default" id="btn-back"><i class="icon-angle-left"></i>返回</button>
        <button type="button" class="btn btn-pink" id="btn-show-upload-image"><i class="icon-jfi-file-image"></i>上传图片</button>
        <button type="button" class="btn btn-info" id="btn-show-upload-file"><i class="icon-file"></i>上传PDF文件</button>
        <button type="button" class="btn btn-success" id="btn-save"><i class="icon-save"></i>提交</button>
        <button type="button" class="btn btn-danger" id="btn-delete"><i class="icon-trash"></i>删除</button>
        <div class="select-time">
          <div class="view">
            <select id="select-year" class="johnny-select">
              <option value="2017">2017年</option>
              <option value="2018">2018年</option>
            </select>
          </div>
          <div class="view">
            <select id="select-quarter" class="johnny-select">
              <option value="1">第一季度</option>
              <option value="2">第二季度</option>
              <option value="3">第三季度</option>
              <option value="4">第四季度</option>
            </select>
          </div>
        </div>
      </div>

      <div class="detail-content"></div>

      <div class="modal fade" tabindex="-1" role="dialog" id="image-upload-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">上传图片（*.jpg, *.jpeg, *.png）</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <div id="file-upload-image" class="fileUploadContent"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary" id="btn-save-upload-images">保存</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
      <div class="modal fade" tabindex="-1" role="dialog" id="file-upload-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">上传文件（*.pdf）</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <div id="file-upload-file" class="fileUploadContent"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary" id="btn-save-upload-files">提交</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>

      <div class="modal fade" tabindex="-1" role="dialog" id="image-memo-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">编辑图片说明</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <textarea class="form-control" rows="3" maxlength="300" placeholder="最多输入300个文字" id="from-field-image-memo"></textarea>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary" id="btn-save-memo">提交</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>

    </div>
  </div>
</div>
<input type="hidden" value="{{itemID}}" id="hidden-itemID">
<input type="hidden" value="{{breadcrumbs}}" id="hidden-breadcrumbs">
<script src="/javascripts/selectric/jquery.selectric.js"></script>
<script src="/javascripts/fileUpload/fileUpload.js"></script>
<script src="/javascripts/view/detail.js"></script>